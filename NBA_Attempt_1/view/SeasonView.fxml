<VBox fx:controller="controller.SeasonController" alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
       style="-fx-padding: 220 0 10 0;" 
       >
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

<GridPane alignment="CENTER" hgap="10" vgap="20" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="100" halignment="CENTER"/>
        </columnConstraints>

    <Button fx:id="viewSeasonRoundButton" text="Round" onAction="#viewSeasonRound" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="viewRoundTeamsButton" text="Current" onAction="#viewRoundTeams" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button fx:id="GameButton" text="Game" onAction="#game" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button fx:id="displayResultRecordButton" text="Result" onAction="#displayResultRecord" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button fx:id="closeButton" text="Close" onAction="#close" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    </GridPane>
</VBox>
