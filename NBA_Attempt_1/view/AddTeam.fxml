<VBox fx:controller="controller.AddTeamController" alignment="CENTER" styleClass="background-1" prefHeight="350.0" prefWidth="500.0" spacing="20" 
       xmlns:fx="http://javafx.com/fxml/1" >

    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>

    <GridPane hgap="10" vgap="10">
    <Label text="Team Details" styleClass="label-h2" GridPane.columnIndex="11" GridPane.rowIndex="0"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" >
        <Label text="Name:"/>
        <TextField fx:id="newTeamName"/>
    </HBox>

    <Button fx:id="addTeamButton" text="Add" onAction="#addTeam"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>

    

